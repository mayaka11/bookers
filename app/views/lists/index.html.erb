<!DOCTYPE html>
<html></html>
<body>
    <p id="notice"></p>
    <h1>Lists#index  投稿一覧 Books</h1>
    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Body</th>
          <th colspan="3"></th>
        </tr>
      </thead>

     <tbody>
       <% @lists.each do |list| %>
      <tr>
        <p><%= link_to list.title, list_path(list.id) %></p>
        <p><%= @list.body %></p>
      </tr>
      </tbody>
    </table>

      <% end %>


    <h2>Lists#new  新規投稿 New book</h2>
<!-- form_with部分 -->
<%= form_with model: @list,url: '/books',method: :post do |f| %>
  <h4>title</h4>
  <%= f.text_field :title %>

  <h4>body</h4>
  <%= f.text_area :body %>

  <%= f.submit '投稿' %>
<% end %>

</body>












