<!DOCTYPE html>
<html>
  <div>
    <%= flash[:notice] %>
    <%= flash[:destroy] %>
  </div>

  <body>
    <p id="notice"></p>
    <h1>Books</h1>

    <table>
      <thfad>
        <tr>
         <th>Title</th>
         <th>Body</th>
         <th colspan="3"></th>
        </tr>
      </thfad>

      <tbody>
       <% @books.each do |book| %>
       <tr>
         <td>
           <%= book.title %>
         </td>
         <td>
          <%= book.body %>
         </td>
         <td>
           <%= link_to "Show",book_path(book.id) %>
           <%= link_to "Edit",edit_book_path(book.id) %>
           <%= link_to "Destroy", destroy_book_path(book.id) , method: :delete, "data-confirm" => "Do you really want to delete this?" %>
         </td>
       </tr>
      </tbody>
    <% end %>


      <% if @book.errors.any? %>
      <%= @book.errors.count %>errors
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
    <% end %>

  </body>

  <main>

    <h2>New book</h2>
      <!-- form_with部分 -->
      <%= form_with model: @book, url: '/books',method: :post do |f| %>
    <h4>title</h4>
      <%= f.text_field :title %>

    <h4>body</h4>
      <%= f.text_area :body %>

      <%= f.submit 'Create Book' %>
    <% end %>

  </main>
  </table>
</html>









